<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%-include('../partials/head') %> 
<body>
	<!-- Header -->
	<%-include('../partials/header') %> 
	<!-- /Header -->
	<form class="form-register" action="/products" method="POST" enctype="multipart/form-data" novalidate>
		<h4>Nuevo Producto</h4>
		<div>
			<label for="name" class="form-label"></label>
			<input class="controls" type="text" name="name" id="name" placeholder="Nombre" value="<%= locals.old && old.name %>">
			<% if (locals.errors && errors.name) { %>
				<small class="text-danger"><%= errors.name.msg %></small>
				<% } %>
		</div>
		<div>
			<label for="price" class="form-label"></label>
			<input class="controls" type="text" name="price" id="price" placeholder="precio" value="<%= locals.old && old.price %>">
			<% if (locals.errors && errors.price) { %>
				<small class="text-danger"><%= errors.price.msg %></small>
				<% } %>> 
		</div>
		<div>
			<label for="discount" class="form-label"></label>
		<input class="controls" type="text" name="discount" id="discount" placeholder="descueto" value="<%= locals.old && old.discount %>">
		<% if (locals.errors && errors.discount) { %>
			<small class="text-danger"><%= errors.discount.msg %></small>
			<% } %>>
		</div>
		<div class="controls">
			<label for="category" class="form-label">Categoría:</label>
			<select name="category" id="category" class="form-input">
				<option value="">Elegí</option>
				<option value="En Oferta">En oferta</option>
				<option value="Destacado">Destacado</option>
			</select>
		</div>
		<div class="controls">
			<label for="description" class="form-label">Descripcion</label>
			<textarea name="description" id="description" class="form-input"  ></textarea>
		</div>
		<div >
			<input type="file" name="image" id="image" accept="image/*"
				class="form-control%>">
		</div>
		<input class="botons" type="submit" value="GUARDAR">
	</form>
	<!-- /todos los productos -->

	<!-- footer -->
	<%-include('../partials/footer') %> 
	<!-- /footer -->
</body>	
</html>