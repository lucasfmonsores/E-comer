<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>

    <body>
        <!-- Header -->
        <%- include('partials/header') %>
            <!-- /Header -->

            <section class="btn__crea">
                <a href="products/create"><p>Creá tu e-sandwich</p></a>
            </section>

            <div class="btn__utiles">
                <div class="link__util link__pago">
                    <p>Pagá con credito o debito</p>
                    <img class="link__icon" src="/images/iconos/img-tarjeta.png" alt="Pagá con credito o debito">
                </div>

                <div class="link__util link__catalogo">
                    <p>Accede al catalogo exclusivo</p>
                    <img class="link__icon" src="images/iconos/img-catalogo.png" alt="Accede al catalogo exclusivo">
                </div>

                <div class="link__util link__delivery">
                    <p>Delivery sin cargo</p>
                    <img class="link__icon" src="/images/iconos/img-delivery.png" alt="Delivery sin cargo">
                </div>
            </div>

            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="/images/Sanguches/Medialunas/Medialuna con roquefort.jpg" class="d-block w-100"
                            alt="Medialuna con Roquefort.">
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/Sanguches/Paninis/Panini con salchichas.jpg" class="d-block w-100"
                            alt="Panini con Salchicas.">
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/Sanguches/Pebetes/Pebete de Jamon y Queso.jpeg" class="d-block w-100"
                            alt="Pebete de Jamon y Queso.">
                        <div class="carousel-caption d-none d-md-block">
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <main class="home__productos">
                    <section class="contenedorDeProductos">
                        <% products.forEach((product)=> { %>
                            <article class="ttaProducto">
                                
                                <div class="imgContainer">
                                    <h2 class="relevanciaProducto"><%- product.category %></h2>
                                    <img src="/images/<%- product.image %>" alt="">
                                </div>
                                <div class="tituloYprecio">
                                    <h3 class="tituloProducto"><%- product.name %></h3>
                                    <p class="precio">$<%- product.price - (product.price * product.discount / 100) %></p>
                                    <% if (product.discount> 0) { %>
                                    <span class = "priceOff"><%- product.discount %>% OFF</span>
                                    <% } %>
                                </div>
                                <p class="descripcionProducto"><%- product.description %></p>
                                <a href="/products/productDetail/<%- product.id %>" class="btn btnDetalle">Detalle</a>
                                <br>
                                <a href="/products/productDetail/<%- product.id %>" class="btn btnComprar">Comprar</a>
                            </article>
                            <% }) %>
                    </section>                   
            </main>

            <!--Boostrap-->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
                crossorigin="anonymous"></script>

            <!-- footer -->
            <%- include('partials/footer') %>
                <!-- /footer -->
    </body>

</html>